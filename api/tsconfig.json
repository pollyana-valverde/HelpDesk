{
    "compilerOptions": {
        "target": "ES2023",
        "lib": ["ES2023"],

        "paths": {
            "@/*": ["./src/"]
        },
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "skipLibCheck": true
    }
}